public class Node{
	private int data;
	private Node left, right;

	//constructor basic
	Node(){
		this.setLeft(null);
		this.setRight(null);
		this.setData(0);
	}

	//parameterized constructor
	Node(int data){
		this.setLeft(null);
		this.setRight(null);
		this.setData(data);
	}

	//parameterized constructor
	Node(int data , Node left, Node right){
		this.setData(data);
		this.setLeft(left);
		this.setRight(right);
	}

	//Accessors and Mutators
	public void setData(int data){
		this.data = data;
	}

	public void setLeft(Node left){
		this.left = left;
	}

	public void setRight(Node right){
		this.right = right;
	}

	public int getData(){
		return this.data;
	}

	public Node getLeft(){
		return this.left;
	}

	public Node getRight(){
		return this.right;
	}

	//Printing node
	public void printNode(){
		System.out.println("Node data: " + this.data );
	}
}