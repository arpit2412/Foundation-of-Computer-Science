//Class for printing the array in order and in reverse order both
class printArray{

	//int n is taken because we are asking user for how many inputs and printing array in order to that
	//for int
	void printArray(int [] array, int n){
		System.out.print(" [ ");
		for(int i=0;i<n;i++){
			System.out.print(array[i]);
			if(i!=n-1){							//for ignoring the comma before closing brackets
				System.out.print(" , ");			
			}
		}
		System.out.println(" ] ");
	}

	//int n is taken because we are asking user for how many inputs and printing array in order to that
